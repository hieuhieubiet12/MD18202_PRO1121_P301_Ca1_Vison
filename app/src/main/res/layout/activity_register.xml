<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:fontFamily="@font/mali"
            android:text="Chào mừng bạn đến với Vision"
            android:textColor="#575757"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="#046380"
            android:layout_marginBottom="15dp"
            android:src="@drawable/vision_logo"/>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edL_taiKhoanNew"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/baseline_person_24"
            app:errorEnabled="false"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_taiKhoannew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tài khoản"
                android:textSize="18dp"
                android:fontFamily="@font/mali"
                android:maxLength="20"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edL_matKhaunew"
            android:layout_marginTop="5dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="false"
            app:startIconDrawable="@drawable/baseline_lock_24"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_matKhaunew"
                android:layout_width="match_parent"
                android:fontFamily="@font/mali"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Mật khẩu"
                android:textSize="18dp"
                android:maxLength="20"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edL_nhapLaiMatKhau"
            android:layout_marginTop="5dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/baseline_lock_24"
            app:errorEnabled="false"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_nhapLaiMatKhau"
                android:layout_width="match_parent"
                android:fontFamily="@font/mali"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Nhập lại mật khẩu"
                android:textSize="18dp"
                android:maxLength="20"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edL_hotennew"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/baseline_accessibility_24"
            app:errorEnabled="false"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_hotennew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Họ và tên"
                android:textSize="18dp"
                android:fontFamily="@font/mali"
                android:maxLength="20"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edL_ngaysinhnew"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:focusable="false"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/baseline_calendar_month_24"
            app:errorEnabled="false"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_ngaysinhnew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:hint="Ngày sinh"
                android:focusable="false"
                android:textSize="18dp"
                android:fontFamily="@font/mali"
                android:maxLength="20"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edL_sdtnew"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/baseline_local_phone_24"
            app:errorEnabled="false"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_sdtnew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:hint="Số điện thoại"
                android:textSize="18dp"
                android:fontFamily="@font/mali"
                android:maxLength="20"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edL_diaChinew"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:startIconDrawable="@drawable/baseline_location_on_24"
            app:errorEnabled="false"
            app:endIconMode="clear_text">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_diaChinew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Địa chỉ"
                android:textSize="18dp"
                android:fontFamily="@font/mali"
                android:maxLength="50"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/btn_dangKy_KH"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="ĐĂNG KÝ"
            android:fontFamily="@font/mali"
            android:backgroundTint="@color/main"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/white"/>

    </LinearLayout>
</ScrollView>